//! > loop match pop front with spaces

//! > cairo_code
fn main() {
    let mut a: Span<u32> = array![ 1,  2,  3,  4,  5 ].span();  // Extra spaces
    loop {
        match a.pop_front() {
            Option::Some(val) => println!("{val}"),
            Option::None => { 
                // Comment with spaces
                break;
            },
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Whitespace detected.
 --> lib.cairo:2:28
  |
2 |     let mut a: Span<u32> = array![ 1,  2,  3,  4,  5 ].span();  // Extra spaces
  |                            ---------------------------
  |

//! > fixed
fn main() {
    let mut a: Span<u32> = array![1,2,3,4,5].span();  // Extra spaces
    loop {
        match a.pop_front() {
            Option::Some(val) => println!("{val}"),
            Option::None => { 
                // Comment with spaces
                break;
            },
        }
    }
}

//! > ==========================================================================

//! > loop match pop front with spaces in none

//! > cairo_code
fn main() {
    let mut a: Span<u32> = array![ 1, 2, 3, 4, 5 ].span();
    loop {
        match a.pop_front() {
            Option::Some(val) => println!("{val}"),
            Option::None => { 
                println!("Finished looping  ");  // Spaces at the end
                break;
            },
        }
    }
}

//! > diagnostics
warning: Plugin diagnostic: Whitespace detected.
 --> lib.cairo:2:28
