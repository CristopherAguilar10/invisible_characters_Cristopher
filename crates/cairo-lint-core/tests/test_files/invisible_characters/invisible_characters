//! > loop match pop front with spaces in none

//! > cairo_code
fn main() {
    let mut a: Span<u32> = array![ 1, 2, 3, 4, 5 ].span();
    loop {
        match a.pop_front() {
            Option::Some(val) => println!("{val}"),
            Option::None => { 
                println!("Finished looping  ");  
                break;
            },
        }
    }
}

